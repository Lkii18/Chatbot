<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Rating.InformationActivity"


    >

    <TextView
        android:id="@+id/name_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:text="Name"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411" />

    <TextView
        android:id="@+id/type_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        app:layout_constraintStart_toStartOf="@+id/name_txt2"
        app:layout_constraintTop_toBottomOf="@+id/name_txt2" />

    <TextView
        android:id="@+id/comment_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        app:layout_constraintStart_toStartOf="@+id/type_txt2"
        app:layout_constraintTop_toBottomOf="@+id/type_txt2" />

    <TextView
        android:id="@+id/rating_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rating"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/comment_txt2"
        app:layout_constraintTop_toBottomOf="@+id/comment_txt2"/>

    <TextView
        android:id="@+id/address_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="address"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/rating_txt2"
        app:layout_constraintTop_toBottomOf="@+id/rating_txt2"/>

</androidx.constraintlayout.widget.ConstraintLayout>